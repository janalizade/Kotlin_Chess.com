<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/root_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="72dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    android:layout_gravity="center_vertical"
    android:background="@color/main_blue_60"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.github.ivbaranov.mli.MaterialLetterIcon
        android:id="@+id/item_letter"
        android:layout_width="@dimen/letterIconSize"
        android:layout_height="@dimen/letterIconSize"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/item_letter"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:textColor="@color/white"
        android:padding="8dp"
        android:textSize="16sp" />

    <com.like.LikeButton
        android:id="@+id/btn_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:icon_type="Star"
        app:icon_size="@dimen/likeIconSize"
        />

</RelativeLayout>
