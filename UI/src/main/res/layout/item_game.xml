<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/root_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="72dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    android:layout_gravity="center_vertical"
    android:background="@color/main_blue_60"
    android:foreground="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.github.ivbaranov.mli.MaterialLetterIcon
        android:id="@+id/date_letter"
        app:mli_letters_number="3"
        app:mli_letter_size="16"
        android:layout_width="@dimen/letterIconSize"
        android:layout_height="@dimen/letterIconSize"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/date_letter"
        android:layout_marginStart="16dp"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:padding="8dp"
        android:textSize="16sp"
        />

    <ImageButton
        android:id="@+id/download_pgn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:background="@null"
        app:srcCompat="@drawable/ic_file_download_24dp"/>
</RelativeLayout>
